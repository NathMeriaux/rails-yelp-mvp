  <%= link_to "Modifier", edit_restaurant_path(restaurant) %>
  <br>
  <%= link_to "Delete", restaurant_path(restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <br>
  <br>

<% end %>

